<Window x:Class="SimplyRugby2._0.LoginAsSecretary"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimplyRugby2._0"
        mc:Ignorable="d"
        Title="Log-in Screen" Height="360" Width="300" FontSize="14" Background="black">

    <StackPanel Margin="20">
        <Label Content="SecretaryLogin" Foreground="DarkOrange" FontSize="25" HorizontalAlignment="Center"></Label>
        <Separator></Separator>
        <Label Content="Username:" Foreground="DarkOrange"></Label>
        <TextBox Name="SecretaryUsername" Background="white" FontSize="18" Foreground="Black" ></TextBox>
        <Label Content="Password:" Foreground="DarkOrange"></Label>
        <TextBox Name="SecretaryPassword" Background="white" FontSize="18" Foreground="Black" ></TextBox>
        <Button Name="Submitbtn" Content="Submit"  Background="white" FontSize="18" HorizontalAlignment="Center"  Margin="30" Click="Submitbtn_Click"></Button>
        <Label Content="Admins Username: 10011589 &#xD;&#xA;Admins Password: 123654" Foreground="DarkOrange" HorizontalAlignment="Center"></Label>
    </StackPanel>
    
  
</Window>
