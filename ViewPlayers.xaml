<Window x:Class="SimplyRugby2._0.ViewPlayers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimplyRugby2._0"
        mc:Ignorable="d"
        Title="ViewPlayers" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="51,139,78,78"/>
        <TextBox x:Name="searchtxtbox2" HorizontalAlignment="Left" Margin="86,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.471,0.488"/>
        <Button x:Name="Searchbtn2" Content="Search" HorizontalAlignment="Left" Margin="283,46,0,0" VerticalAlignment="Top" Click="Searchbtn2_Click"/>
        <Button x:Name="backtodash" Content="Back To DashBoard" HorizontalAlignment="Left" Margin="657,56,0,0" VerticalAlignment="Top" Click="backtodash_Click"/>
        <Button x:Name="viewjuniorbtn" Content="View all Junior Players" HorizontalAlignment="Left" Margin="365,41,0,0" VerticalAlignment="Top" Click="viewjuniorbtn_Click"/>
        <Button x:Name="viewseniorbtn" Content="View all Senior Players" HorizontalAlignment="Left" Margin="454,90,0,0" VerticalAlignment="Top" Click="viewseniorbtn_Click"/>

    </Grid>
</Window>
