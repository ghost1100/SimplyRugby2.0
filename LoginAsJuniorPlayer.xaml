<Window x:Class="SimplyRugby2._0.LoginAsJuniorPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimplyRugby2._0"
        mc:Ignorable="d"
        Title="LoginAsJuniorPlayer" Height="450" Width="400" Background="Black">
    
    <StackPanel Margin="20">
        <Label Content="Junior Player Login" Foreground="DarkOrange" FontSize="25" HorizontalAlignment="Center"></Label>
        <Separator></Separator>
        <Label Content="Username:" Foreground="DarkOrange"></Label>
        <TextBox x:Name="JPlayerUsername" Background="white" FontSize="18" Foreground="Black" ></TextBox>
        <Label Content="Password:" Foreground="DarkOrange"></Label>
        <TextBox x:Name="JPlayerPassword" Background="white" FontSize="18" Foreground="Black" ></TextBox>
        <Button x:Name="Submitbtn13" Content="Submit"  Background="white" FontSize="18" HorizontalAlignment="Center"  Margin="30" Click="Submitbtn_Click"></Button>
        <Label Content="Admins Username: 12569874 &#xA;Admins Password: 123654" Foreground="DarkOrange" HorizontalAlignment="Center"></Label>
    </StackPanel>
</Window>
